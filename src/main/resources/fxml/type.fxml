<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<AnchorPane prefHeight="335.0" prefWidth="603.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.TypeController">
    <HBox spacing="20"  prefWidth="150" AnchorPane.leftAnchor="220" AnchorPane.topAnchor="17">
        <Button text="添加商品类别" onAction="#listType"  styleClass="green-theme" AnchorPane.leftAnchor="220"/>
    </HBox>
    <TableView fx:id="typeTable" prefHeight="600" prefWidth="1490" AnchorPane.leftAnchor="220" AnchorPane.topAnchor="80">
        <columns>
            <TableColumn text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="id"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="类别名称">
                <cellValueFactory>
                    <PropertyValueFactory property="typeName"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</AnchorPane>
