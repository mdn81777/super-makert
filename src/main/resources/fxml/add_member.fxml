<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.AddMemberController">
<HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
      minHeight="50" alignment="CENTER">
    <Label text="新增会员信息" />
</HBox>
<VBox spacing="20" minHeight="400"
      AnchorPane.topAnchor="55" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
    <TextField promptText="会员姓名"  fx:id="memberName" prefWidth="200"/>

    <TextField promptText="地址" fx:id="memberAddress"  prefWidth="200"/>

    <TextField promptText="联系方式"  fx:id="memberPhone" prefWidth="200"/>
    <TextField promptText="积分"   fx:id="memberIntegral" prefWidth="200"/>
</VBox>
<padding>
    <Insets bottom="10" left="50" right="50" top="10" />
</padding>
<Button text="确认" onAction="#addMember"
        AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="180"/>
</AnchorPane>
