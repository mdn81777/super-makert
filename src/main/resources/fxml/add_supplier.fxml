<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.soft1841.sm.controller.AddSupplierController">
    <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          minHeight="50" alignment="CENTER">
        <Label text="新增供应商信息" />
    </HBox>
    <VBox spacing="20" minHeight="400"
          AnchorPane.topAnchor="55" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <TextField promptText="供应商名称" fx:id="supplierName" prefWidth="200"/>

        <TextField promptText="地址" fx:id="supplierAddress" prefWidth="200"/>

        <TextField promptText="电话" fx:id="supplierPhone" prefWidth="200"/>
        <TextField promptText="称呼" fx:id="linkMen" prefWidth="200"/>
    </VBox>
    <padding>
        <Insets bottom="10" left="50" right="50" top="10" />
    </padding>
    <Button text="确认" onAction="#addSupplier"
            AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="180" AnchorPane.rightAnchor="180"/>
</AnchorPane>
